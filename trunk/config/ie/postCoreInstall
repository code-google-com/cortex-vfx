########################################################################## 
# 
# This script is supposed to be called from scons. It is intended for use 
# only with Image Engine's build. It dependns on internal module "IEBuild". 
# 
########################################################################## 

import sys

import VersionControl 
VersionControl.setVersion('IEBuild', '2.24.4') 
import IEBuild  

ieCoreMajorVersion=ARGUMENTS['MAJOR']
ieCoreMinorVersion=ARGUMENTS['MINOR']
ieCorePatchVersion=ARGUMENTS['PATCH']

ieCoreVersion = "%s.%s.%s" % ( ieCoreMajorVersion, ieCoreMinorVersion, ieCorePatchVersion )

# op wrappers

coreOps = [ 
	[ "SequenceLsOp", "seqLs", "common/fileSystem" ], 
	[ "SequenceCpOp", "seqCp", "common/fileSystem" ], 
	[ "SequenceMvOp", "seqMv", "common/fileSystem" ], 
	[ "SequenceRmOp", "seqRm", "common/fileSystem" ], 
	[ "SequenceRenumberOp", "seqRenumber", "common/fileSystem" ], 
	[ "SequenceConvertOp", "seqConvert", "common/fileSystem" ],
	[ "SequenceCatOp", "seqCat", "common/fileSystem" ],
	[ "RemovePrimitiveVariables", "removeVariables", "common/primitive" ], 
	[ "RenamePrimitiveVariables", "renameVariables", "common/primitive" ], 
	[ "PointsExpressionOp", "pointsExpression", "common/primitive" ],
	[ "ClassLsOp", "classLs", "common/classes" ], 
	[ "FileDependenciesOp", "depLs", "common/fileSystem" ], 
	[ "CheckFileDependenciesOp", "depCheck", "common/fileSystem" ], 
	[ "LsHeaderOp", "lsHeader", "common/fileSystem" ],
	[ "SearchReplaceOp", "searchReplace", "common/fileSystem" ],
	[ "CheckImagesOp", "checkImages", "common/fileSystem" ],
	[ "FileSequenceGraphOp", "fileSequenceGraph", "common/fileSystem" ],
	[ "MeshPrimitiveImplicitSurfaceOp", "implicitSurface", "common/primitive/mesh" ], 	
	[ "MeshVertexReorderOp", "vertexReorder", "common/primitive/mesh" ],
	[ "MeshPrimitiveShrinkWrapOp", "shrinkWrap", "common/primitive/mesh" ],	 		
	[ "Grade", "grade", "common/colorSpace" ],
	[ "CubeColorTransformOp", "cubeColorTransform", "common/colorSpace" ],
	[ "CineonToLinearOp", "cineonToLinear", "common/colorSpace" ],
	[ "LinearToCineonOp", "linearToCineon", "common/colorSpace" ],
	[ "SRGBToLinearOp", "SRGBToLinear", "common/colorSpace" ],
	[ "LinearToSRGBOp", "linearToSRGB", "common/colorSpace" ],
	[ "Rec709ToLinearOp", "Rec709ToLinear", "common/colorSpace" ],
	[ "LinearToRec709Op", "linearToRec709", "common/colorSpace" ],
	[ "UVDistortOp", "uvDistort", "common/2d/image" ],
	[ "ImageCompositeOp", "imageComposite", "common/2d/image" ],
]

for op in coreOps : 

	IEBuild.OpWrapper( ARGUMENTS, op[0], "IECore", ieCoreVersion, op[2], op[1], ieCoreMajorVersion, useVersionControl = False ).finalize()


coreProcedurals = [ 
	[ "ReadProcedural", "read", "" ], 
	[ "VisualiserProcedural", "visualiser", "" ], 
]

for procedural in coreProcedurals : 

	IEBuild.ProceduralWrapper( ARGUMENTS, procedural[0], "IECore", ieCoreVersion, procedural[2], procedural[1], ieCoreMajorVersion, useVersionControl = False ).finalize()
